root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[CMakeLists.txt]
end_of_line = lf
indent_size = 2
indent_style = space

[*.cmake]
end_of_line = lf
indent_size = 2
indent_style = space

[*.{c,h}]
end_of_line = lf
indent_size = 4
indent_style = tab

[*.{dlg,rc}]
charset = utf-16le
end_of_line = crlf
indent_size = 4
indent_style = space

[*.rs]
end_of_line = lf
indent_size = 4
indent_style = space
